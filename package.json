{
  "name": "whisp-line",
  "version": "1.0.65",
  "description": "Voice input method software built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm version patch --no-git-tag-version && electron-builder",
    "build:mac": "npm version patch --no-git-tag-version && electron-builder --mac",
    "build:win": "npm version patch --no-git-tag-version && electron-builder --win",
    "build:linux": "npm version patch --no-git-tag-version && electron-builder --linux",
    "icon:mac": "bash -c 'ICON=assets/icon.png; OUT=assets/icon.icns; TMP=assets/app.iconset; rm -rf \"$TMP\" \"$OUT\"; mkdir \"$TMP\"; for SIZE in 16 32 64 128 256 512; do sips -z $SIZE $SIZE \"$ICON\" --out \"$TMP/icon_${SIZE}x${SIZE}.png\" >/dev/null; sips -z $((SIZE*2)) $((SIZE*2)) \"$ICON\" --out \"$TMP/icon_${SIZE}x${SIZE}@2x.png\" >/dev/null; done; iconutil -c icns \"$TMP\" -o \"$OUT\"; rm -rf \"$TMP\"'",
    "icon:win": "node -e \"require('png-to-ico')('assets/icon.png').then(buf=>require('fs').writeFileSync('assets/icon.ico',buf)).catch(e=>{console.error(e);process.exit(1);})\""
  },
  "keywords": [
    "electron",
    "voice",
    "input",
    "transcription"
  ],
  "author": "Tao",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^10.1.0",
    "groq-sdk": "^0.30.0",
    "uiohook-napi": "^1.5.4"
  },
  "optionalDependencies": {
    "koffi": "^2.13.0"
  },
  "build": {
    "appId": "com.tao.whispline",
    "productName": "WhispLine",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "files": [
        "!node_modules/koffi/**/*"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "CFBundleDisplayName": "WhispLine",
        "CFBundleName": "WhispLine",
        "CFBundleIdentifier": "com.tao.whispline",
        "NSMicrophoneUsageDescription": "WhispLine needs microphone access to transcribe your voice input.",
        "NSAppleEventsUsageDescription": "WhispLine needs Apple Events access to insert text into other applications.",
        "NSSystemAdministrationUsageDescription": "WhispLine needs system administration access for global keyboard shortcuts.",
        "LSMinimumSystemVersion": "10.15.0"
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
